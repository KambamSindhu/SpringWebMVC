-------------------------------------------book
package in.ashokit.entity;

import javax.persistence.Entity;
import javax.persistence.Id;

import lombok.Data;

@Entity
@Data
public class book {
  
	@Id
	private Integer book_id;
	private String book_name;
	private Integer book_price;
}

